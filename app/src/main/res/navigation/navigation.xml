<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@+id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="cn.linhome.kotlinmvvmsamples.ui.main.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_mainFragment_to_coinFragment"
            app:destination="@id/coinFragment"
            app:enterAnim="@anim/slide_right_in"
            app:exitAnim="@anim/slide_left_out"
            app:popEnterAnim="@anim/slide_left_in"
            app:popExitAnim="@anim/slide_right_out" />

        <action
            android:id="@+id/action_mainFragment_to_collectionFragment"
            app:destination="@id/collectArticlesListFragment"
            app:enterAnim="@anim/slide_right_in"
            app:exitAnim="@anim/slide_left_out"
            app:popEnterAnim="@anim/slide_left_in"
            app:popExitAnim="@anim/slide_right_out" />

    </fragment>

    <fragment
        android:id="@+id/coinFragment"
        android:name="cn.linhome.home.ui.coin.CoinFragment"
        android:label="CoinFragment"
        tools:layout="@layout/fragment_coin" />

    <fragment
        android:id="@+id/collectArticlesListFragment"
        android:name="cn.linhome.home.ui.collect.CollectArticlesListFragment"
        android:label="CollectArticlesListFragment"
        tools:layout="@layout/fragment_collect" />

</navigation>