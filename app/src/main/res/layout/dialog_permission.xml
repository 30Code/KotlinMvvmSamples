<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/res_layer_white_corner">

    <TextView
        android:id="@+id/tv_permission_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/res_loading"
        android:textColor="@color/res_text_gray_m"
        android:textSize="@dimen/res_text_l"
        android:gravity="center"
        android:padding="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/res_stroke_s"
        android:background="@color/res_stroke"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="@color/res_main_color"
            android:textSize="@dimen/res_text_m"
            android:gravity="center"/>

        <View
            android:layout_width="@dimen/res_stroke_s"
            android:layout_height="match_parent"
            android:background="@color/res_stroke"/>

        <TextView
            android:id="@+id/tv_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="去设置"
            android:textColor="@color/res_main_color"
            android:textSize="@dimen/res_text_m"
            android:gravity="center"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>