<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="project"
            type="cn.linhome.common.bean.ProjectDetailData" />

        <variable
            name="title"
            type="String" />

        <variable
            name="desc"
            type="String" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        app:cardCornerRadius="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/iv_envelope"
                android:layout_width="60dp"
                android:layout_height="75dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                bind:imgUrl="@{project.envelopePic}"
                bind:placeHolder="@{@drawable/ic_place_holder}"
                bind:error="@{@drawable/ic_broken_image}"
                tools:src="@drawable/ic_place_holder"/>

            <TextView
                android:id="@+id/tv_project_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@{title}"
                android:textColor="@color/res_text_gray_l"
                android:textSize="@dimen/res_text_l"
                android:textStyle="bold"
                tools:text="用户引导view"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/iv_envelope"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tv_project_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lineSpacingExtra="4dp"
                android:maxLines="3"
                android:minLines="2"
                android:text="@{desc}"
                android:textSize="@dimen/res_text_s"
                android:textColor="@color/res_text_gray_m"
                tools:text="应用推出新功能需要给给用户提示指引一下.传入需要指引的View即可"
                app:layout_constraintLeft_toLeftOf="@+id/tv_project_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_project_title"
                app:layout_constraintRight_toRightOf="@+id/tv_project_title"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/author_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text='@{project.author + "\t\t" + project.niceDate}'
                android:textSize="@dimen/res_text_s"
                android:textColor="@color/res_text_gray_s"
                tools:text="yilylong\t\t2019-07-01"
                app:layout_constraintTop_toBottomOf="@+id/tv_project_desc"
                app:layout_constraintRight_toRightOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>