<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <import type="cn.linhome.common.widget.RequestStatusCode"/>

        <variable
            name="indicator"
            type="String" />

        <variable
            name="adapter"
            type="androidx.recyclerview.widget.ConcatAdapter" />

        <variable
            name="itemClick"
            type="cn.linhome.common.base.OnItemClickListener" />

        <variable
            name="itemLongClick"
            type="cn.linhome.common.base.OnItemLongClickListener" />

        <variable
            name="refreshColor"
            type="Integer" />

        <variable
            name="refreshing"
            type="Boolean" />

        <variable
            name="statusCode"
            type="RequestStatusCode" />

        <variable
            name="errorReload"
            type="cn.linhome.common.widget.ErrorReload" />

        <variable
            name="gesture"
            type="cn.linhome.common.base.DoubleClickListener" />

        <variable
            name="refreshListener"
            type="androidx.swiperefreshlayout.widget.SwipeRefreshLayout.OnRefreshListener" />

        <variable
            name="divider"
            type="androidx.recyclerview.widget.RecyclerView.ItemDecoration" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="?attr/colorPrimary"
            app:titleTextColor="@color/white"
            android:theme="@style/ThemeOverlay.MaterialComponents.ActionBar"
            app:popupTheme="@style/ThemeOverlay.MaterialComponents.Light"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            bind:refreshColor="@{refreshColor}"
            bind:refreshListener="@{refreshListener}"
            bind:refreshState="@{refreshing}"
            android:background="@color/res_bg_activity"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_article_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:scrollbarThumbVertical="@drawable/custom_scroll_bar"
                android:scrollbars="vertical"
                android:visibility="@{statusCode == RequestStatusCode.Succeed ? View.VISIBLE : View.GONE}"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"
                bind:divider="@{divider}"
                bind:adapter="@{adapter}"
                bind:hasFixedSize="@{true}"
                bind:pagingItemClick="@{itemClick}"
                bind:pagingItemLongClick="@{itemLongClick}"
                tools:itemCount="20"
                tools:listitem="@layout/item_collect" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

        <cn.linhome.common.widget.RequestStatusView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            bind:errorReload="@{errorReload}"
            bind:requestStatusCode="@{statusCode}" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>